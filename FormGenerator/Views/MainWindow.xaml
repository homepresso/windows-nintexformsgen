                                                  VerticalAlignment="Center"
                                                  Foreground="{StaticResource TextSecondary}"/>
                                        <TextBox Grid.Row="4" Grid.Column="1" 
                                                Name="K2FolderTextBox"
                                                Style="{StaticResource ModernTextBox}"
                                                Text="/Forms/Generated"
                                                Margin="5,2"/>
                                        <Button Grid.Row="4" Grid.Column="2"
                                               Name="BrowseK2FolderButton"
                                               Content="📁 Browse"
                                               Style="{StaticResource ModernButton}"
                                               Margin="5,2"
                                               Width="100"
                                               Click="BrowseK2Folder_Click"/>

                                        <!-- Test Connection Button -->
                                        <Button Grid.Row="5" Grid.Column="1" 
                                               Name="TestK2ConnectionButton"
                                               Content="Test Connection"
                                               Style="{StaticResource ModernButton}"
                                               HorizontalAlignment="Left"
                                               Margin="5,10,0,0"
                                               Width="150"
                                               Click="TestK2Connection_Click"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- K2 Generation Options -->
                            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="K2 SmartForms Options" 
                                              FontSize="18" 
                                              FontWeight="Medium"
                                              Foreground="{StaticResource TextPrimary}"
                                              Margin="0,0,0,15"/>

                                    <StackPanel>
                                        <TextBlock Text="SmartObject Options:" 
                                                  FontWeight="Medium"
                                                  Foreground="{StaticResource TextPrimary}"
                                                  Margin="0,0,0,10"/>

                                        <CheckBox Name="GenerateSmartObjectsCheckBox"
                                                 Content="Generate SmartObjects"
                                                 Style="{StaticResource ModernCheckBox}"
                                                 IsChecked="True"/>

                                        <CheckBox Name="UseExistingSmartObjectsCheckBox"
                                                 Content="Link to Existing SmartObjects"
                                                 Style="{StaticResource ModernCheckBox}"
                                                 IsChecked="False"/>

                                        <TextBlock Text="Form Type:" 
                                                  FontWeight="Medium"
                                                  Foreground="{StaticResource TextPrimary}"
                                                  Margin="0,15,0,10"/>

                                        <RadioButton Name="K2ItemViewRadio"
                                                    Content="Item View (Single record)"
                                                    Style="{StaticResource ModernRadioButton}"
                                                    IsChecked="True"
                                                    GroupName="K2FormType"/>

                                        <RadioButton Name="K2ListViewRadio"
                                                    Content="List View (Multiple records)"
                                                    Style="{StaticResource ModernRadioButton}"
                                                    GroupName="K2FormType"/>

                                        <RadioButton Name="K2BothViewsRadio"
                                                    Content="Both Item and List Views"
                                                    Style="{StaticResource ModernRadioButton}"
                                                    GroupName="K2FormType"/>

                                        <TextBlock Text="Advanced Options:" 
                                                  FontWeight="Medium"
                                                  Foreground="{StaticResource TextPrimary}"
                                                  Margin="0,15,0,10"/>

                                        <CheckBox Name="GenerateWorkflowK2CheckBox"
                                                 Content="Generate K2 Workflow"
                                                 Style="{StaticResource ModernCheckBox}"
                                                 IsChecked="False"/>

                                        <CheckBox Name="IncludeRulesK2CheckBox"
                                                 Content="Include Form Rules"
                                                 Style="{StaticResource ModernCheckBox}"
                                                 IsChecked="True"/>

                                        <CheckBox Name="IncludeStylesK2CheckBox"
                                                 Content="Apply K2 Styling"
                                                 Style="{StaticResource ModernCheckBox}"
                                                 IsChecked="True"/>

                                        <CheckBox Name="EnableVersioningK2CheckBox"
                                                 Content="Enable Form Versioning"
                                                 Style="{StaticResource ModernCheckBox}"
                                                 IsChecked="False"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Generate and Deploy Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                                <Button Name="GenerateK2Button"
                                       Content="🔨 Generate K2 Forms"
                                       Style="{StaticResource ModernButton}"
                                       Width="200"
                                       Height="45"
                                       FontSize="16"
                                       Click="GenerateK2_Click"
                                       IsEnabled="False"/>

                                <Button Name="DeployK2Button"
                                       Content="🚀 Deploy to K2"
                                       Style="{StaticResource ModernButton}"
                                       Width="200"
                                       Height="45"
                                       FontSize="16"
                                       Background="{StaticResource SuccessColor}"
                                       Margin="10,0,0,0"
                                       Click="DeployK2_Click"
                                       IsEnabled="False"/>

                                <Button Name="ExportK2PackageButton"
                                       Content="📦 Export Package"
                                       Style="{StaticResource ModernButton}"
                                       Width="200"
                                       Height="45"
                                       FontSize="16"
                                       Background="{StaticResource InfoColor}"
                                       Margin="10,0,0,0"
                                       Click="ExportK2Package_Click"
                                       IsEnabled="False"/>
                            </StackPanel>

                            <!-- Generation Log -->
                            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                              Text="Generation Log" 
                                              FontSize="16" 
                                              FontWeight="Medium"
                                              Foreground="{StaticResource TextPrimary}"
                                              Margin="0,0,0,10"/>

                                    <TextBox Grid.Row="1"
                                            Name="K2GenerationLog"
                                            Style="{StaticResource ModernTextBox}"
                                            IsReadOnly="True"
                                            MinHeight="150"
                                            Text="Ready to generate K2 SmartForms..."/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundMedium}" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Name="StatusText"
                          Text="Ready"
                          Foreground="{StaticResource TextSecondary}"
                          VerticalAlignment="Center"
                          Margin="10,0"/>

                <ProgressBar Grid.Column="1" 
                            Name="ProgressBar"
                            Height="4"
                            Background="{StaticResource BackgroundLighter}"
                            Foreground="{StaticResource AccentColor}"
                            BorderThickness="0"
                            Visibility="Collapsed"
                            Margin="10,0"/>

                <TextBlock Grid.Column="2" 
                          Name="VersionText"
                          Text="v1.0.0"
                          Foreground="{StaticResource TextSecondary}"
                          VerticalAlignment="Center"
                          Margin="10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>